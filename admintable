     $stmt = mysqli_prepare($db, $query);
	 //$stmt->bind_param("s", $searchArtist );


     //if ($stmt === FALSE)
	 if (! $stmt->execute())
	{
	
		die("</tbody><table>fix your query syntax! </body></html>");
	}

     $stmt->bind_result($username, $staredpassword);

	// while($row = mysql_fetch_array($result))
